<Window x:Class="Jeffijoe.Voidstone.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Voidstone" Height="350" Width="525">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <StackPanel Grid.Row="0" >
            <TextBlock>Input directory</TextBlock>
            <DockPanel LastChildFill="True">
                <Button DockPanel.Dock="Right">Browse</Button>
                <TextBox></TextBox>
            </DockPanel>
        </StackPanel>
        <StackPanel Grid.Row="1">
            <TextBlock>Input file pattern</TextBlock>
            <TextBox></TextBox>
        </StackPanel>
        <StackPanel Grid.Row="2">
            <TextBlock>Framerate</TextBlock>
            <TextBox></TextBox>
        </StackPanel>
        <StackPanel Grid.Row="3" Margin="0 10 0 0">
            <Button>Start</Button>
        </StackPanel>
    </Grid>
</Window>
